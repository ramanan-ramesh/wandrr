<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base dark gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1A202C"
                android:centerColor="#2D3748"
                android:endColor="#334155"
                android:angle="135"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Subtle star-like dots overlay -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <stroke 
                android:width="1dp" 
                android:color="#22FFFFFF"
                android:dashWidth="1dp"
                android:dashGap="15dp" />
        </shape>
    </item>
    
    <!-- Another layer with offset pattern for more star-like appearance -->
    <item android:top="5dp" android:left="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <stroke 
                android:width="0.5dp" 
                android:color="#33FFFFFF"
                android:dashWidth="0.5dp"
                android:dashGap="20dp" />
        </shape>
    </item>
    
    <!-- Subtle sparkle effect -->
    <item android:top="3dp" android:left="12dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <stroke 
                android:width="0.5dp" 
                android:color="#44E0E0E0"
                android:dashWidth="2dp"
                android:dashGap="25dp" />
        </shape>
    </item>
</layer-list>
