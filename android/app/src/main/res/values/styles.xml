<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LaunchTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#034565</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/animated_splashscreen_icon</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.App</item>
    </style>

    <style name="Theme.App" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="actionBarTheme">@style/Theme.AppCompat.NoActionBar</item>
        <item name="android:enforceNavigationBarContrast">false</item>
    </style>
</resources>
