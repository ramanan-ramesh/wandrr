<?xml version="1.0" encoding="utf-8"?><!-- res/layout/splash_screen.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/splash_screen_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:importantForAccessibility="no"
        android:src="@mipmap/app_logo_round" />

    <TextView
        android:id="@+id/wandrr_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:alpha="0.0"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:text="@string/app_name"
        android:textColor="#000000"
        android:textSize="50sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_logo"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/spaceship"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:importantForAccessibility="no"
            android:src="@drawable/spaceship" />

    </FrameLayout>

</RelativeLayout>